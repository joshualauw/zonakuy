// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  email           String         @unique
  username        String         @unique
  password        String
  display_name    String
  profile_picture String?
  preferences     Json?
  role            Role
  address         String?
  phone           String?
  notifications   Notification[]
  bio             String?
  is_banned       Boolean        @default(false)
  is_verified     Boolean        @default(false)
  createdAt       DateTime       @default(now()) @db.Date
  updatedAt       DateTime       @updatedAt @db.Date
  Event           Event[]
  Participant     Participant[]
}

model Event {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  user        User          @relation(fields: [user_id], references: [id])
  user_id     String        @db.ObjectId
  name        String
  description String
  banner      String?
  gallery     String[]      @default([])
  price       Float
  limit       Int
  is_banned   Boolean       @default(false)
  start_date  DateTime      @db.Date
  end_date    DateTime      @db.Date
  location    Location?
  invitations Invitation[]
  tags        String[]      @default([])
  isPublic    Boolean       @default(false)
  log         Log[]
  createdAt   DateTime      @default(now()) @db.Date
  updatedAt   DateTime      @updatedAt @db.Date
  Sponsor     Sponsor[]
  Participant Participant[]
  Budget      Budget[]
  Form        Form[]
  Session     Session[]
}

model Participant {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  event       Event         @relation(fields: [event_id], references: [id])
  event_id    String        @db.ObjectId
  user        User          @relation(fields: [user_id], references: [id])
  user_id     String        @db.ObjectId
  is_banned   Boolean       @default(false)
  role        EventRole
  access      EventAccess[]
  ref         String        @unique
  preferences Json?
  createdAt   DateTime      @default(now()) @db.Date
  updatedAt   DateTime      @updatedAt @db.Date
  Certificate Certificate[]
  Chat        Chat[]
}

model Sponsor {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  event       Event    @relation(fields: [event_id], references: [id])
  event_id    String   @db.ObjectId
  name        String
  logo        String?
  description String
  createdAt   DateTime @default(now()) @db.Date
  updatedAt   DateTime @updatedAt @db.Date
}

model Budget {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  event     Event     @relation(fields: [event_id], references: [id])
  event_id  String    @db.ObjectId
  name      String
  limit     Float
  current   Float
  category  String
  expenses  Expense[]
  createdAt DateTime  @default(now()) @db.Date
  updatedAt DateTime  @updatedAt @db.Date
}

model Session {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  event       Event     @relation(fields: [event_id], references: [id])
  event_id    String    @db.ObjectId
  title       String
  description String
  day         DateTime
  start_time  String
  end_time    String
  speaker     Speaker[]
  createdAt   DateTime  @default(now()) @db.Date
  updatedAt   DateTime  @updatedAt @db.Date
}

model Form {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  event     Event          @relation(fields: [event_id], references: [id])
  event_id  String         @db.ObjectId
  name      String
  fields    FormField[]
  responses FormResponse[]
  createdAt DateTime       @default(now()) @db.Date
  updatedAt DateTime       @updatedAt @db.Date
}

model Certificate {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  participant    Participant @relation(fields: [participant_id], references: [id])
  participant_id String      @db.ObjectId
  objects        Json
  createdAt      DateTime    @default(now()) @db.Date
  updatedAt      DateTime    @updatedAt @db.Date
}

model Chat {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  participant    Participant @relation(fields: [participant_id], references: [id])
  participant_id String      @db.ObjectId
  content        Json
  type           ChatType
  createdAt      DateTime    @default(now()) @db.Date
  updatedAt      DateTime    @updatedAt @db.Date
}

model Transaction {
  id             String            @id @default(auto()) @map("_id") @db.ObjectId
  code           String            @unique
  email          String
  address        String
  phone          String
  country        String
  status         TransactionStatus
  payment_method String
  detail         Json
  notes          String
  createdAt      DateTime          @default(now()) @db.Date
}

type Invitation {
  code        String
  email       String
  valid_until DateTime
}

type FormResponse {
  email   String
  answers Json
}

type FormField {
  question String
  image    String?
  type     FormType
  required Boolean
  options  String[] @default([])
}

type Log {
  by     String
  action String
  type   LogType
  time   DateTime
}

type Notification {
  content   String
  url       String?
  is_read   Boolean  @default(false)
  createdAt DateTime @db.Date
}

type Location {
  latitude    Float
  longitude   Float
  country     String
  city        String
  street      String
  venue       String
  postal_code String
}

type Expense {
  name   String
  amount Int
}

type Speaker {
  name   String
  avatar String?
  role   String?
}

enum LogType {
  budget
  sponsor
  participant
  certificate
  form
  session
}

enum FormType {
  shorttext
  paragraph
  checkbox
  radiobutton
  fileupload
  datetime
}

enum TransactionStatus {
  failed
  success
  pending
  refunded
  canceled
}

enum ChatType {
  basic
  announcement
}

enum Role {
  user
  admin
}

enum EventRole {
  invited
  reguler
  collaborator
  owner
}

enum EventAccess {
  session
  budget
  chat
  livestream
  sponsor
  form
  certificate
  participant
}
